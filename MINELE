list =[]
def readele(list):
  count = int(input('enter the size of list '))
  for i in range(count):
    val = int(input('enter the element into the list '))
    list.append(val)

readele(list)

def indexofsmallestelement(list):
  mini = min(list)
  index = list.index(mini)
  print('minimum element is',mini)
  print('position of minimum ele is',index)


indexofsmallestelement(list)